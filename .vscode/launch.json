    "version": "0.2.0",
    "configurations": [
        {
            "name": "debug api serve",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/apps/api/src/main.ts",
            "preLaunchTask": "tsc: watch - apps/api/tsconfig.json",
            "console": "integratedTerminal",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "outFiles": [
                "${workspaceFolder}/**/*.js",
                "!**/node_modules/**"
            ],
        }
    ]
}